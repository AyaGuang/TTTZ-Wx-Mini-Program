.body{
  background-image: url(https://mp-2b1c41a4-fdd7-465e-af62-0e39538234ac.cdn.bspapp.com/lwg_img/pvp_game/back.png);
  background-size: cover;
  background-position-x: -470rpx;
  width: 750rpx;
  height: 1700rpx;
  overflow: hidden;
  font-weight: 1000;
}

.back{
position: absolute;
left: 20rpx;
top: 60rpx;
width: 80rpx;
height: 80rpx;
}

.back image{
width: 100%;
height: 100%;
}

.round{
width: 180rpx;
height: 100rpx;
position: absolute;
top: 50rpx;
left:325rpx;
margin: 0rpx 225rpx;
line-height: 100rpx;
border-radius: 40rpx;
background-color: rgba(249, 141, 102, 1);
color: rgba(255, 228, 147, 1);
font-size: 40rpx;
text-align: center;
font-family: CustomFont;
}

.turns{
  width: 300rpx;
  height: 100rpx;
  position: relative;
  top: 50rpx;
  margin: 0rpx 225rpx;
  line-height: 100rpx;
  border-radius: 40rpx;
  background-color: rgba(249, 141, 102, 1);
  color: rgba(255, 228, 147, 1);
  font-size: 50rpx;
  text-align: center;
  font-family: CustomFont;
}

.peo_icon{
  width: 90rpx;
  height: 90rpx;
  margin-top: 80rpx;
  margin-left: 20rpx;
  display: inline-block;
}
.short_player{
  display: inline-block;
  font-family: customfont;
  position: relative;
  top: -20rpx;
  left: 20rpx;
  text-align: left;
  width: 350rpx;
  height: 60rpx;
  font-size: 40rpx;
  color: rgba(248, 152, 106, 0.8);  
}
.dice_box{
  width: 700rpx;
  height: 150rpx;
  margin: auto;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
  border: 6rpx solid rgba(31, 30, 53, 1);
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
  overflow: visible;
}
.dice_item{
  position: relative;
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;       
  border: 6rpx solid rgba(187, 187, 187, 1);
  box-shadow: 0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.4);
  overflow: visible;
}
.dice{
  width: 88rpx;
  height: 88rpx;
}
.my_scroll{
  margin-top: 20rpx;
  width: 750rpx;
  height: 370rpx;
  /* background-color: skyblue; */
  white-space: nowrap;
}
.scroll_item{
  width: 250rpx;
  height: 300rpx;
  background-color: rgba(255, 210, 178, 0.95);
  display: inline-block;
  margin: 20rpx;
  border-radius: 20rpx;
  border: 8rpx solid rgba(51,66,87,1);
  font-family: CustomFont;
  font-weight: bold;
  box-shadow: 15rpx 15rpx rgba(0,0,0,0.7);
}
.play_area{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 30rpx;
}
#score_menu{
  width: 440rpx;
  height: 200rpx;
  line-height: 20px;
  border-radius: 30rpx 0rpx 30rpx 0rpx;
  background-color: rgba(255, 222, 178, 0.96);
  border: 10rpx solid rgba(0, 0, 0, 1);
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.4);
  font-family: customfont;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 10rpx;
  
}
.output{
  width: 200rpx;
  height: 100rpx;
  font-size: 35rpx;
  line-height: 100rpx;
}
.output:last-child{
  width: 400rpx;
}
#start_Button{
  width: 250rpx;
  height: 250rpx;
  animation: button_transform 1s infinite linear;
}
#button_area{
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}
.btn{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 222, 178, 0.96);
  font-size: 50rpx;
  text-align: center;
  border: 8rpx solid rgba(0, 0, 0, 1);
  color: rgba(255, 136, 136, 1);
  font-family: customfont;   
}
#mul_menu{
  margin-left: 20rpx;
  width: 300rpx;
  height: 200rpx;
  display: inline-block;
}
.mul{
  margin-bottom: 10rpx;
  width: 130rpx;
  height: 60rpx;
  background-color:lightsalmon;
  color:rgba(255, 228, 147, 1);
  font-family: customfont;
  text-align: center;
  font-family: CustomFont;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.5);
}
#table{
  position: relative;
  left: -200rpx;
  top: 40rpx;
  width: 1050rpx;
  height: 500rpx;
  z-index: 50;
}
#player1{
  width: 280rpx;
  height: 360rpx;
  position: relative;
  top: -470rpx;
  left: -350rpx;
  z-index: 100;
}
#player2{
  position: relative;
  width: 340rpx;
  height: 320rpx;
  top: -750rpx;
  left: 420rpx;
  z-index: 0;
}

#tuoguan{
  position: relative;
  transform: scale(-1,1);
  width: 150rpx;
  height: 150rpx;
  top: -720rpx;
  left: 580rpx;
  z-index: 1000;
}
#card{
  position: relative;
  width: 260rpx;
  height: 240rpx;
  z-index: 70;
  top: -750rpx;
  left: 150rpx;
}
.lock{
  position:absolute;
  width: 70%;
  height: 70%;
  top: 50rpx;
  left: 50rpx;
}

.lock image{
width: 100%;
height: 100%;
}

.win_box{
position: absolute;
bottom: 30%;
left: 8%;
width: 600rpx;
height: 750rpx;
border: 15rpx solid;
border-radius: 50rpx 0rpx 50rpx 0rpx;
background-color: coral;
}

.win_box text{
font-size: 80rpx;
text-align: center;
margin-bottom: 50rpx;
font-family: CustomFont;
display: block;
}

@keyframes button_transform{
  0%{
    transform: scale(1,1);
  }
  50%{
    transform: scale(1.05,1.05);
  }
  100%{
    transform: scale(1,1);
  }
}